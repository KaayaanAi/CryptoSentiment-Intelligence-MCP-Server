# CryptoSentiment Intelligence MCP Server Configuration

# Server Configuration
NODE_ENV=production
PORT=4004
HOST=0.0.0.0
SERVER_NAME=crypto-sentiment-intelligence-mcp-server
LOG_LEVEL=info
TIMEZONE=Asia/Kuwait

# Protocol Configuration
ENABLE_STDIO=true
ENABLE_HTTP_REST=true
ENABLE_HTTP_MCP=true
ENABLE_WEBSOCKET=true

# Security Configuration
API_KEY_HEADER=x-api-key
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGINS=*
JWT_SECRET=your-jwt-secret-here

# Database Configuration
MONGODB_URL=mongodb://username:password@mongodb:27017/crypto_sentiment
MONGODB_DATABASE=crypto_sentiment
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=crypto_sentiment_2025
MONGODB_PORT=27017
# SECURITY: Redis URL with authentication - MUST use strong password in production
REDIS_URL=redis://:crypto_sentiment_redis_2025_secure!@redis:6379
REDIS_PREFIX=crypto-sentiment:
# CRITICAL: Redis password MUST be set for security - minimum 16 characters with special chars
REDIS_PASSWORD=crypto_sentiment_redis_2025_secure!
REDIS_PORT=6379

# AI Provider Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
DEFAULT_MODEL=deepseek/deepseek-chat
BACKUP_MODEL=meta-llama/llama-3.1-8b-instruct:free
AI_TIMEOUT_MS=30000
MAX_TOKENS=4000

# Price API Configuration
COINGECKO_API_KEY=your-coingecko-api-key
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
BINANCE_BASE_URL=https://api.binance.com/api/v3
PRICE_CACHE_TTL=300

# News Sources Configuration
NEWS_FETCH_INTERVAL=300000
NEWS_MAX_AGE_HOURS=24
RSS_FEEDS=https://cointelegraph.com/rss,https://coindesk.com/arc/outboundfeeds/rss/
REDDIT_FEEDS=https://www.reddit.com/r/CryptoCurrency/.rss,https://www.reddit.com/r/Bitcoin/.rss

# Analysis Configuration
DEFAULT_ANALYSIS_DEPTH=standard
DEFAULT_TIME_RANGE=6h
DEFAULT_MAX_NEWS_ITEMS=15
SENTIMENT_CONFIDENCE_THRESHOLD=0.6
CACHE_ANALYSIS_TTL=900

# Performance Configuration
CONNECTION_POOL_SIZE=10
REQUEST_TIMEOUT_MS=30000
MAX_CONCURRENT_ANALYSIS=5
MEMORY_LIMIT_MB=1024

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION=true
ERROR_REPORTING=true
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=15d
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=crypto_sentiment_admin
GRAFANA_ALLOW_SIGNUP=false

# HTTP Server Configuration
HTTP_PORT=4005