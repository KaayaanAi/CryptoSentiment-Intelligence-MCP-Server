# CryptoSentiment Intelligence MCP Server Configuration
# Only includes environment variables actually used by the application

# Server Configuration
NODE_ENV=production
PORT=4004
HOST=0.0.0.0

# Protocol Configuration  
ENABLE_STDIO=true
ENABLE_HTTP_REST=true
ENABLE_HTTP_MCP=true
ENABLE_WEBSOCKET=true

# Security Configuration
API_KEY_HEADER=x-api-key
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGINS=*
JWT_SECRET=your-jwt-secret-here-minimum-32-characters

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/crypto_sentiment
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=crypto-sentiment:

# AI Provider Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
DEFAULT_MODEL=deepseek/deepseek-chat-v3.1:free
BACKUP_MODEL=deepseek/deepseek-r1-0528-qwen3-8b:free

# Price API Configuration
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
BINANCE_BASE_URL=https://api.binance.com/api/v3

# Analysis Configuration
DEFAULT_ANALYSIS_DEPTH=standard
DEFAULT_TIME_RANGE=6h
DEFAULT_MAX_NEWS_ITEMS=15
SENTIMENT_CONFIDENCE_THRESHOLD=0.6
CACHE_ANALYSIS_TTL=900